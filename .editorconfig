root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,rst,txt}]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
end_of_line = LF

[*.{h,h++,hh,hpp,hxx}]
indent_size = 2
cpp_indent_case_contents_when_block = true
cpp_new_line_before_open_brace_namespace = same_line
